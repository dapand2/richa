<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/m_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.multimedia.busy.SavetextMessage" >

    <Spinner
        android:id="@+id/m_textmessage"
        android:layout_width="fill_parent"
        android:layout_height="110px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/m_rounded"
        android:entries="@array/message_arrays" />

    <ImageButton
        android:id="@+id/m_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/m_buttonstyle"
        android:src="@drawable/red_button"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/m_data"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_alignLeft="@+id/m_textmessage"
        android:background="@drawable/m_rounded"
        android:layout_below="@+id/m_Sel"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="please enter a text message" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/m_Sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_textmessage"
        android:background="@drawable/m_rounded"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Or Please enter a text message below:" />

    <TextView
        android:id="@+id/m_errormessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/m_rounded"
        android:layout_below="@+id/m_data"
        android:layout_marginTop="56dp"
        android:text="TextView" 
        android:visibility="invisible"/>

</RelativeLayout>
