<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/m_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.multimedia.busy.Deactivate" >

    <TextView
        android:id="@+id/m_deactivatemsg"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="72dp"
        android:textSize="20sp"
         android:textColor="#FF0000"
        android:text="Application is in activated state do you want to deactivate it? " />

    <Button
        android:id="@+id/m_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/m_deactivatemsg"
        android:background="@drawable/m_rounded"
        android:layout_below="@+id/m_deactivatemsg"
        android:layout_marginRight="18dp"
        android:text="No" />

    <Button
        android:id="@+id/m_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m_no"
        android:layout_alignBottom="@+id/m_no"
        android:layout_alignLeft="@+id/m_deactivatemsg"
        android:background="@drawable/m_rounded"
        android:layout_marginLeft="16dp"
        android:text="Yes" />

    <TextView
        android:id="@+id/m_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/m_deactivatemsg"
        android:layout_below="@+id/m_yes"
        android:layout_marginTop="67dp"
        android:textColor="#FF0000"
        android:text="Note:If you choose no you will be able to choose a different event within the app " />

</RelativeLayout>